<view class="container flex-column">
  <view class="avatar">
    <image src='{{avatarUrl}}'></image>
    <button hidden="{{is_login}}" class="btn-register" size='mini' type='warn' open-type='getUserInfo' bindgetuserinfo='register'></button>
  </view>
  <view class="name">{{nickName}}</view>
  
  <button class="share flex-row itemC" open-type='share'>
    <image src="/images/icon_honor.png" class="img-honor"></image>
    <text>争做环保小卫士</text>
  </button>
  <image src="/images/picbg.png" class="v-ab picbg"></image>
</view>